#!/bin/bash

format_pct()
{
    printf "%.0f" $(echo "scale=2;100 * ${Charge}/${Capacity} 0.2" | bc)
}

linux_get_bat ()
{
    batpath=${batpath:-/sys/class/power_supply/BAT0}
    status=$batpath/status
    if [ -f "$batpath/energy_full" ]; then
        naming="energy"
    elif [ -f "$batpath/charge_full" ]; then
        naming="charge"
    fi
    Capacity=$(cat ${batpath}/${naming}_full)
    Charge=$(cat ${batpath}/${naming}_now)
    status=$(cat $BATPATH/status)

    Connected=false
    if [ "$status" = "Yes" ]; then
        connected=true
    fi
    Ratio=$(format_pct)
}


darwin_get_bat ()
{
    IFS=$(echo -en "\n\b") read -r battline <<< $(pmset -g batt)
    drawing_from=$(echo $battline | sed -E "s/^Now drawing from '(.*)'.*/\1/")
    Ratio=$(echo $battline | sed -E "s/.* ([[:digit:]]?[[:digit:]]?[[:digit:]])%.*/\1/")
    case $drawing_from in
        "Battery Power")
            Connected=false;;
        "AC Power")
            Connected=true;;
    esac
}

battery_status()
{
case $(uname -s) in
    "Linux")
        linux_get_bat
        ;;
    "Darwin")
        darwin_get_bat
        ;;
esac
}

lightning_bolt()
{
    case $(uname -s) in
        "Linux")
            # #[bold]⚡#[nobold] 
            echo -en '#[bold]\u26A1\uff0e#[nobold]'
            ;;
        "Darwin")
            # ⌁ is another option
            echo -n "#[bold]ᛋ#[nobold] "
            ;;
    esac
}

battery_status

ticks=( ! ▂ ▃ ▄ ▅ ▆ ▇ █ )
n=$(( $Ratio << 8 ))
d=$(( (100 << 8)/(${#ticks[@]}-1) ))
tick=${ticks[$(( $n/$d ))]}

if [ "$Connected" = true ]; then
    lightning_bolt
else
    if [ "$Ratio" -le 18 ]; then
        echo -n "#[bg=colour196,fg=colour195]"
        # flash the icon for 2 out of 6 seconds
        m=$(expr `date +"%S"` % 6)
        if [ "$m" -lt 2 ]; then
            echo -n " "
        else
            lightning_bolt
        fi
    else
        echo -n "${tick} "
    fi
fi
printf "%2s%%" $Ratio
