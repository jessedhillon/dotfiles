# vim: set ft=gitconfig:

[core]
    excludesfile = ~/.gitignore
    editor = vim
[log]
    date = local
[alias]
    st = status
    ci = commit -S --verbose
    co = checkout
    cp = cherry-pick
    br = branch
    ls = log --pretty=\"format:%h %s (%cn, %ah)\n-------\" --name-status
    hist = log --pretty=format:'%h %ad | %s%d [%an]' --graph --date=short
    unstage = reset HEAD
    current-branch = rev-parse --abbrev-ref HEAD
    cb = rev-parse --abbrev-ref HEAD
[user]
    email = jesse@dhillon.com
    name = Jesse Dhillon
[push]
	default = simple

[hub]
protocol = ssh

[rebase]
	autosquash = true
[init]
	defaultBranch = master
